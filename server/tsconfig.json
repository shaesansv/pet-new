{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "rootDir": "../",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["node"],
    "baseUrl": "../", 
    "paths": {
      "@shared/*": ["shared/*"]
    }
  },
  "include": ["src/**/*", "../shared/**/*"],
  "exclude": ["../client", "node_modules", "**/*.test.ts"]
}